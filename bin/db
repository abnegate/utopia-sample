#!/usr/bin/env bash

DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd)"

while [[ $# -gt 0 ]]; do
  key="$1"

  case $key in
  -d | --drop)
    mysql -uroot <"${DIR}/../sql/drop.sql"
    shift
    ;;
  -s | --seed)
    mysql -uroot <"${DIR}/../sql/seed.sql"
    shift
    ;;
  *)
    shift
    ;;
  esac
done
